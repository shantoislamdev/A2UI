{
  "schema": "server_to_client.json",
  "tests": [
    {
      "description": "Button with nested valid checks",
      "valid": true,
      "data": {
        "updateComponents": {
          "surfaceId": "test_surface",
          "components": [
            {
              "id": "btn1",
              "component": "Button",
              "child": "txt1",
              "action": { "event": { "name": "submit" } },
              "checks": [
                {
                  "and": [
                    {
                      "call": "required",
                      "args": [{ "path": "/formData/terms" }],
                      "returnType": "boolean"
                    },
                    {
                      "or": [
                        {
                          "call": "required",
                          "args": [{ "path": "/formData/email" }],
                          "returnType": "boolean"
                        },
                        {
                          "call": "required",
                          "args": [{ "path": "/formData/phone" }],
                          "returnType": "boolean"
                        }
                      ]
                    }
                  ],
                  "message": "Must accept terms and provide contact info"
                }
              ]
            },
            { "id": "txt1", "component": "Text", "text": "Submit" }
          ]
        }
      }
    },
    {
